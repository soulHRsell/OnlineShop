@model IPagedList<CategoryViewModel>

@{
    ViewData["title"] = "Categories";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-primary mb-0">
                    <i class="bi bi-tags"></i> @ViewData["Title"]
                </h2>
                <a asp-action="Create" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle"></i> Add New
                </a>
            </div>

            <!-- 🔍 Search Form -->
            <form method="get" asp-action="Index" class="card p-3 shadow-sm mb-4 border-0">
                <div class="row g-2 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-search"></i> Search by Name
                        </label>
                        <input type="text"
                               name="name"
                               value="@ViewBag.Name"
                               class="form-control"
                               placeholder="Enter category name..." />
                    </div>

                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>

                    <div class="col-md-2 d-grid">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                        </a>
                    </div>
                </div>
            </form>

            <!-- 📋 Category Table -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th class="text-end" style="width: 160px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            <span class="fw-semibold">@category.Name</span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@category.Id"
                                               class="btn btn-sm btn-outline-warning me-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@category.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted py-4">
                                        <i class="bi bi-inbox"></i> No categories found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- 📄 Pagination -->
            <div class="mt-4">
                @Html.PagedListPager(
                Model,
                page => Url.Action("Index", new { page, name = ViewBag.Name }),
                                new PagedListRenderOptions
                                {
                                    LinkToFirstPageFormat = "<i class='bi bi-chevron-double-left'></i>",
                                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                                    LinkToLastPageFormat = "<i class='bi bi-chevron-double-right'></i>",
                                    UlElementClasses = new[] { "pagination", "justify-content-center", "mt-3" },
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" },
                                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                    DisplayLinkToNextPage = PagedListDisplayMode.Always
                                })
            </div>
        </div>
    </div>
</div>
