@model UserViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
                    <h3 class="mb-0 fw-semibold"><i class="bi bi-person-circle me-2"></i>@ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="text-end mb-3">
                            <form asp-action="Edit" method="get" class="d-inline">
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square me-1"></i> Edit Profile
                                </button>
                            </form>
                        </div>
                    }

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Username" class="form-label fw-semibold"></label>
                            <input asp-for="Username" class="form-control" readonly />
                        </div>

                        <div class="col-12">
                            <label asp-for="EmailAddress" class="form-label fw-semibold"></label>
                            <input asp-for="EmailAddress" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-semibold"></label>
                            <input asp-for="FirstName" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-semibold"></label>
                            <input asp-for="LastName" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Country" class="form-label fw-semibold"></label>
                            <input asp-for="Country" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="State" class="form-label fw-semibold"></label>
                            <input asp-for="State" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="City" class="form-label fw-semibold"></label>
                            <input asp-for="City" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ZipCode" class="form-label fw-semibold"></label>
                            <input asp-for="ZipCode" class="form-control" readonly />
                        </div>

                        <div class="col-12">
                            <label asp-for="CardNumber" class="form-label fw-semibold"></label>
                            <input asp-for="CardNumber" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center bg-light rounded-bottom-4 py-3">
                    <small class="text-muted">
                        <i class="bi bi-shield-lock"></i> Your information is kept private and secure.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>