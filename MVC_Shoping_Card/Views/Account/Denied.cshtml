@{
    ViewData["Title"] = "Access Denied";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4">
                <div class="card-body">
                    <div class="mb-4 text-danger">
                        <i class="bi bi-shield-lock display-1"></i>
                    </div>

                    <h2 class="fw-bold text-danger mb-3">@ViewData["Title"]</h2>
                    <p class="fs-5 text-muted mb-4">
                        Sorry, you do not have permission to access this page.
                        If you believe this is a mistake, please contact the administrator.
                    </p>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger px-4">
                        <i class="bi bi-house-door me-2"></i>Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>