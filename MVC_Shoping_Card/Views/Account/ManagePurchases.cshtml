@model IPagedList<PurchaseViewModel>

@{
    ViewData["Title"] = "Manage Purchases";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-box-seam"></i> @ViewData["Title"]
        </h2>
        <p class="text-muted">Search, filter, and confirm purchases.</p>
    </div>

    <!-- 🔍 Search -->
    <form method="get" asp-action="ManagePurchases" class="mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row g-3 align-items-end">

                    <div class="col-md-3">
                        <label class="form-label">Purchase ID</label>
                        <input type="number" name="id" value="@ViewBag.Id" class="form-control" placeholder="e.g. 1201" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Product Name</label>
                        <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Search..." />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        @{
                            string s = ViewBag.Status as string;
                        }
                        <select name="status" class="form-select">
                            <option value="">All</option>
                            <option value="Pending" selected="@(s == "Pending" ? "selected" : null)">Pending</option>
                            <option value="Completed" selected="@(s == "Completed" ? "selected" : null)">Completed</option>
                            <option value="Sent" selected="@(s == "Sent" ? "selected" : null)">Sent</option>
                        </select>
                    </div>

                    <div class="col-md-2 d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-fill"><i class="bi bi-search"></i>Search</button>
                        <a asp-action="ManagePurchases" class="btn btn-outline-secondary flex-fill">
                            <i class="bi bi-arrow-counterclockwise"></i>Reset
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- 📋 Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle text-center mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>User</th>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Amount</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.UserName</td>
                                    <td>@p.Product.Name</td>
                                    <td>@p.Product.Category.Name</td>
                                    <td>@p.Amount</td>
                                    <td class="fw-bold text-success">$@(p.Product.Price* p.Amount)</td>
                                    <td>@p.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (p.IsSent)
                                        {
                                            <span class="badge bg-success">Sent</span>
                                        }
                                        else if (p.IsCompleted)
                                        {
                                            <span class="badge bg-primary">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (p.IsCompleted && !p.IsSent)
                                        {
                                            <form asp-action="MarkAsSent" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-truck"></i> Confirm Sent
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-secondary" style="font-size:3rem;"></i>
                    <p class="text-muted mt-3">No purchases found.</p>
                </div>
            }
        </div>
    </div>

    <!-- 📄 Pagination -->
    <div class="mt-4">
        @Html.PagedListPager(
                Model,
                page => Url.Action("Index", new { page, id = ViewBag.Id, name = ViewBag.Name, status = ViewBag.Status }),
                new PagedListRenderOptions
                {
                    LinkToFirstPageFormat = "<i class='bi bi-chevron-double-left'></i>",
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    LinkToLastPageFormat = "<i class='bi bi-chevron-double-right'></i>",
                    UlElementClasses = new[] { "pagination", "justify-content-center", "mt-3" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always
                })
    </div>

</div>
