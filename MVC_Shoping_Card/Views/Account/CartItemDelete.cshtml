@model PurchaseViewModel
@{
    ViewData["Title"] = "Remove Item";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
                <div class="card-body">
                    <div class="mb-4 text-warning">
                        <i class="bi bi-exclamation-triangle display-1"></i>
                    </div>

                    <h2 class="fw-bold text-warning mb-3">@ViewData["Title"]</h2>
                    <p class="fs-5 text-muted mb-4">
                        Are you sure you want to remove <strong>@Model.Product.Name</strong> from your cart?
                    </p>

                    <p class="fw-semibold">Price: @((Model.Product.Price * Model.Amount).ToString("C"))</p>
                    <p class="fw-semibold">Quantity: @Model.Amount</p>

                    <form asp-action="CartItemDeleteConfirm" method="post">
                        <input type="hidden" asp-for="Id" name="id" value="@Model.Id"/>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash me-2"></i>Yes, Remove
                            </button>
                            <a asp-action="Cart" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-2"></i>Back to Cart
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>