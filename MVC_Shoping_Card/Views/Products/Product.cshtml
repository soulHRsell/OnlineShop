@model ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Product Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="fw-bold text-primary mb-0">
                            <i class="bi bi-box-seam"></i> @Model.Name
                        </h2>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>

                    <!-- Product Fields -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Category</label>
                            <input class="form-control" value="@Model.Category.Name" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Price</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                <input class="form-control" value="@Model.Price.ToString("0.00")" readonly />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Amount in Stock</label>
                            <input class="form-control" value="@Model.Amount" readonly />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" readonly rows="4">@Model.Info</textarea>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-end gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="Edit" asp-route-id="@Model.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                            </form>

                            <form asp-action="Delete" asp-route-id="@Model.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="AddToCart" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
